---
import MainGridLayout from "../layouts/MainGridLayout.astro";

import { i18n } from "../i18n/translation";
import I18nKey from "../i18n/i18nKey";
import { languagesAndTools } from "@/config";
---

<MainGridLayout title={i18n(I18nKey.home)} description={i18n(I18nKey.blog)}>
  <div
    class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32 dark:text-white"
  >
    <div class="card-base z-10 px-9 py-6 relative w-full">
      <div>
        <img
          src="https://readme-typing-svg.herokuapp.com?font=Architects+Daughter&color=7AF79A&size=30&lines=Hey!+I'm+Linh+Nguyễn!;I'm+a+Software+Developer..."
          alt="avatar"
          class="w-full"
        />
        <div class="flex flex-col md:flex-row">
          <div>
            <div>
              <h3 class="font-semibold text-2xl">Hi 🌎, my name is Linh</h3>
            </div>
            <ul>
              <li>🌱 I’m currently Working in Xbot JSC</li>
              <li>
                🏡 I'm living in a small city in <code>Việt Nam</code> 🇻🇳 👈 🏙️
              </li>
              <li>🤝 I’m available for freelancing.</li>
              <li>📝 And I'm studying English but I'm very lazy 😅</li>
              <li>
                ⚡ Fun fact: I like watching anime and playing game of Hoyoverst
              </li>
              <li>❤️ thank you so much for reading it ❤️</li>
            </ul>
          </div>
          <div>
            <a href="https://app.daily.dev/monsieurkuma"
              ><img
                src="https://api.daily.dev/devcards/v2/fKnPl6IPEJqM9dysMIHKM.png?type=default&r=8na"
                width="356"
                alt="Linh Nguyễn's Dev Card"
              /></a
            >
          </div>
        </div>

        <div class="flex flex-col">
          <h3 class="font-semibold text-2xl my-2">Languages and Tools:</h3>
          <div class="">
            {
              languagesAndTools.map((item) => (
                <div class="float-left pt-2 pr-2">
                  <img
                    height="40"
                    width="40"
                    src={`https://skillicons.dev/icons?i=${item}`}
                  />
                </div>
              ))
            }
          </div>
        </div>

        <h3 class="font-semibold text-2xl my-2">Activity:</h3>
        <div class="flex flex-col items-center justify-center">
          <img
            src="https://github-readme-activity-graph.vercel.app/graph?username=vanlinh1602&bg_color=100f0f&color=4c5e9e&line=4c569e&point=403e41&area=true&hide_border=true"
            alt="avatar"
            class="w-full"
          />
          <div>
            <a
              href="https://github.com/vanlinh1602"
              class="flex flex-col md:flex-row"
            >
              <img
                height="180em"
                src="https://github-readme-stats.vercel.app/api/top-langs?username=vanlinh1602&show_icons=true&locale=en&layout=compact&theme=tokyonight"
                alt="vanlinh1602"
              />
              <img
                height="180em"
                src="https://github-readme-stats.vercel.app/api?username=vanlinh1602&show_icons=true&locale=en&layout=compact&theme=tokyonight"
                alt="vanlinh1602"
              />
            </a>
          </div>
          <p>
            <a href="https://github.com/vanlinh1602">
              <img
                src="https://github-readme-streak-stats.herokuapp.com/?user=vanlinh1602&&theme=tokyonight"
                alt="vanlinh1602"
              />
            </a>
          </p>
        </div>
        <div>
          <h3 class="font-semibold text-2xl my-2">Connect with me:</h3>
          <div class="flex flex-col">
            <div class="flex justify-center">
              ❤️
              <a href="https://www.facebook.com/MonsieurKuma" target="blank">
                <img
                  src="https://img.icons8.com/clouds/100/facebook-new.png"
                  alt="linh nguyễn"
                  height="40"
                  width="40"
                /></a
              >
              <a href="https://x.com/vanlinh2002" target="blank">
                <img
                  src="https://img.icons8.com/ios-filled/50/twitterx--v1.png"
                  alt="vanlinh2002"
                  height="40"
                  width="40"
                /></a
              >
              <a
                href="https://discord.com/users/776054010414497823"
                target="blank"
              >
                <img
                  src="https://img.icons8.com/bubbles/100/discord-logo.png"
                  alt="776054010414497823"
                  height="40"
                  width="40"
                /></a
              >
              <a href="mailto:linhnv1622@gmail.com" target="blank">
                <img
                  width="40"
                  height="40"
                  src="https://img.icons8.com/bubbles/100/new-post.png"
                  alt="new-post"
                />
              </a>
              ❤️
            </div>
            <a
              href="https://discord.com/channels/@me/835488546897920021"
              class="flex justify-center"
            >
              <img
                src="https://lanyard-profile-readme.vercel.app/api/776054010414497823?animated=true&theme=dark&borderRadius=30px"
                alt="connect discord"
              />
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</MainGridLayout>
